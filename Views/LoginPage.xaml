<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.LoginPage"
             BackgroundColor="White">
    <StackLayout Padding="30" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Entry x:Name="EmailEntry" Placeholder="Nombre de Usuario" TextColor="Black" BackgroundColor="#f4f4f4" Margin="0,10,0,10"/>
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" TextColor="Black" BackgroundColor="#f4f4f4" Margin="0,10,0,10"/>
        <Button Text="Iniciar Sesión" BackgroundColor="#4CAF50" TextColor="White" Clicked="OnLoginClicked" CornerRadius="10" Margin="0,20,0,10"/>
        <Button Text="Crear una cuenta" BackgroundColor="#007BFF" TextColor="White" Clicked="OnRegisterClicked" CornerRadius="10" Margin="0,10,0,10"/>
        <Label x:Name="ErrorMessage" Text="Email o contraseña incorrectos" TextColor="Red" IsVisible="False"/>
    </StackLayout>
</ContentPage>
