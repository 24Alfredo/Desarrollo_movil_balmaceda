<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.CompraListPage">

    <StackLayout>
        <Button Text="Agregar Compra" Clicked="OnAddCompraClicked" />
        <ListView x:Name="ComprasListView" ItemTapped="OnCompraTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding TipoEntrega}" Detail="{Binding FechaCompra}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
