<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.CompraEditPage">

    <StackLayout Padding="10">
        <Entry x:Name="TipoEntregaEntry" Placeholder="Tipo de Entrega" />
        <Entry x:Name="PrecioTotalEntry" Placeholder="Precio Total" Keyboard="Numeric" />
        <DatePicker x:Name="FechaCompraPicker" />

        <Button Text="Guardar" Clicked="OnSaveClicked" />
        <Button Text="Eliminar" Clicked="OnDeleteClicked" />
    </StackLayout>
</ContentPage>
